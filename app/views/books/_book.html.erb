

<div class="card" style="width: 18rem;">
  <%= link_to book do %>
  <img class="card-img-top"><%= image_tag book.image.thumb %></img>
  <div class="card-body">
    <h5 class="card-title"><%= book.title %></h5>
    <% end %>
    <h6 class="card-title"><%= book.author %></h6>
    <p class="card-text"><%= book.condition %></p>
    <p><%= book.location %></p>
  </div>
</div>